<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

   <!-- Initialization for data source -->
   <bean id="dataSource" 
      class="org.apache.commons.dbcp.BasicDataSource">
      <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
      <property name="url" 
                value="jdbc:sqlserver://127.0.0.1:1433;DatabaseName=jspdb"/>
      <property name="username" value="sa"/>
      <property name="password" value="sa123456"/>
      <property name="initialSize" value="5"/>
      <property name="maxActive" value="10"/>
   </bean>

   <!-- Definition for MemberJDBCDaoSupport bean -->
   <bean id="memberJDBCDaoSupport" 
      class="ch04.sqlserver._04.jdbcdaosupport.MemberJDBCDaoSupport">
      <!-- 一定要寫下列敘述，但不必準備Setter -->
      <property name="dataSource" ref="dataSource" />   
   </bean>
      
</beans>