<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">
   <!-- 此類別可以換掉  DriverManagerDataSource
      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    -->
   <!-- Initialization for data source -->
   <bean id="dataSource" 
      class="org.apache.commons.dbcp.BasicDataSource">
      <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
      <property name="url" 
                value="jdbc:sqlserver://127.0.0.1:1433;DatabaseName=jspdb"/>
      <property name="username" value="sa"/>
      <property name="password" value="sa123456"/>
      <property name="initialSize" value="5"/>
      <property name="maxActive" value="10"/>
   </bean>
   
   <bean id="jdbcTemplate" 
      class="org.springframework.jdbc.core.JdbcTemplate">
      <constructor-arg ref="dataSource" />  
   </bean>
   <!-- Definition for memberJDBCTemplate bean -->
   <bean id="memberJDBCTemplate" 
      class="ch04.sqlserver._03.jdbcTemplate.MemberJDBCTemplate">
             
      <constructor-arg ref="jdbcTemplate" />    
   </bean>
      
</beans>